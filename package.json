{
  "name": "fint",
  "version": "1.0.0",
  "description": "Financial management system with Indian accounting standards",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "start": "node server/server.js",
    "server": "set PORT=5000 && nodemon server/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prepare": "husky install",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "finance",
    "accounting",
    "india",
    "react",
    "prisma",
    "supabase",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "nodemailer": "^6.10.1",
    "pdfmake": "^0.2.18",
    "pg": "^8.15.5"
  },
  "devDependencies": {
    "@prisma/client": "^6.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "nodemon": "^2.0.22",
    "prettier": "^3.2.5",
    "prisma": "^6.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
